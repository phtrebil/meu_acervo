<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ui.fragments.DetalhesFragments"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/capa_detalhes"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="center"
            tools:src="@tools:sample/backgrounds/scenic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/nome_detalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Senhor dos Aneis: As duas torres"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/capa_detalhes"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/texto_autor"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/nome_detalhes"
            app:layout_constraintStart_toStartOf="@id/nome_detalhes"
            />

        <TextView
            android:id="@+id/autor_detalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="16sp"
            tools:text="J.R.R Tolkien"
            app:layout_constraintStart_toEndOf="@id/texto_autor"
            app:layout_constraintTop_toTopOf="@id/texto_autor"
            />

        <TextView
            android:id="@+id/texto_paginas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:text="Páginas"
            app:layout_constraintStart_toStartOf="@id/texto_autor"
            app:layout_constraintTop_toBottomOf="@+id/texto_autor"/>

        <TextView
            android:id="@+id/paginas_detalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="464"
            android:layout_marginStart="4dp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/texto_paginas"
            app:layout_constraintTop_toTopOf="@id/texto_paginas"/>

        <TextView
            android:id="@+id/texto_avalicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:text="Avaliação"
            app:layout_constraintStart_toStartOf="@id/texto_paginas"
            app:layout_constraintTop_toBottomOf="@+id/texto_paginas"/>

        <TextView
            android:id="@+id/avaliacao_detalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5"
            android:layout_marginStart="4dp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/texto_avalicao"
            app:layout_constraintTop_toTopOf="@id/texto_avalicao"/>

        <TextView
            android:id="@+id/texto_nota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Nota Pessoal:"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/texto_avalicao"
            app:layout_constraintStart_toStartOf="@id/texto_avalicao"
            />

        <TextView
            android:id="@+id/nota_detalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="resumo......................."
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/texto_nota"
            app:layout_constraintStart_toStartOf="@id/texto_nota"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

